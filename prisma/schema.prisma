generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Settings {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Memory {
  id        Int      @id @default(autoincrement())
  title     String?
  content   String
  order     Int      @default(0)
  createdAt DateTime @default(now())
}

model Quiz {
  id             Int      @id @default(autoincrement())
  question       String
  correctAnswer  String
  options        Json
  successMessage String?
  createdAt      DateTime @default(now())
}

model Secret {
  id        Int      @id @default(autoincrement())
  title     String?
  content   String?
  code      String   @unique
  createdAt DateTime @default(now())
}
