generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Settings {
  id           Int      @id @default(autoincrement())
  heroImageUrl String?
  heroTitle    String?
  togetherDate String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Memory {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String?
  date        String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
}

model Quiz {
  id             Int      @id @default(autoincrement())
  question       String
  correctAnswer  String
  options        Json
  successMessage String?
  createdAt      DateTime @default(now())
}

model Secret {
  id        Int      @id @default(autoincrement())
  title     String?
  content   String?
  imageUrl  String?
  code      String   @unique
  createdAt DateTime @default(now())
}
